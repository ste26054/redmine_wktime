	<%= javascript_include_tag 'edit', :plugin => "redmine_wktime" %>
	<% if @trOpen %>
		<% # close the previously opened tr %>
		<% while @wday_index < padTill %>
			<% 
			if !entry.nil? && (@edittimelogs[entry.id] == false)
				edit_entry_from_hook = false
				disable = true
			else
				edit_entry_from_hook = true
				disable = !@editable 
			end
			#disable = !@editable && !edit_entry_from_hook

			if @editable && edit_entry_from_hook
				#hookCellEditPerm = call_hook(:view_cell_edit, :entry => entry)
				# if @edittimelogs.blank?
				# 	disable = !@prev_template && !entry.nil? && !entry.editable_by?(User.current)										
				# else
					# if (@edittimelogs[entry.id] == 'true')
						
					
					if (!@manage_projects.blank? && @manage_projects.size > 0 && User.current.id != @user.id)
						
						disable = !@prev_template && !entry.nil? && !entry.editable_by?(User.current) && !entry.project_id.in?(@manage_projects.map(&:id)) # && !edit_entry_from_hook#!(to_boolean(@edittimelogs))
					else
						disable = !@prev_template && !entry.nil? && !entry.editable_by?(User.current) #&& !edit_entry_from_hook
					end
					#else
						#disable = !@prev_template && !entry.nil? #&& (@edittimelogs[entry.id] == false)#(to_boolean(@edittimelogs))
					#end
				# end
			end
			%>

			<%#if this is from a previous template, don't print the hours%>
			<td class="hours">
				<%#=  "#{entry.id}___ #{@edittimelogs[entry.id].to_s}" unless entry.nil?%>
				<%=h text_field_tag('hours' + @row.to_s() +'[]', entry.nil? || @prev_template ? '' : ("%.2f" % entry.hours) ,:size => 7,
					:style => if controller.logInDaysCondition(@user) 
					"display: none;" 
				else 
					"display: initial;" 
				end,

				:disabled => disable,
				:onchange => "validateTotal(this, #{@wday_index},#{controller.maxHour});") %>

				<input type=<%if controller.logInDaysCondition(@user) %>"number"<% else %>"hidden"<% end %> name="day<%=@row.to_s()%>[]" id="day<%=@row.to_s()%>_" min="0" max=<% if @user.pref[:exceedLogTimeLimit] == "0" %>"1"<% else %>"2"<% end %> step="<%= controller.dayGranularity %>" value=<% if entry.nil? || @prev_template %>'' <% else%><%= ("%.2f" % ((entry.hours*5)/entry.user.actual_weekly_working_hours)) %> <%end %> style=<%if controller.logInDaysCondition(@user) %>"display: initial;"<% else %>"display: none;"<% end %> <% if disable %> disabled <% end %> onchange="updateTablefromDayEntry(this, <%=@wday_index%>);" >

				<%=h hidden_field_tag('ids' + @row.to_s() +'[]', entry.nil? || @prev_template ? '' : entry.id) %>
				<%=h hidden_field_tag('disabled' + @row.to_s() +'[]', disable ) %>
				
				<% cvs = [] %>
				<% show_custfield_img = false %>
				<% if Setting.plugin_redmine_wktime['wktime_enter_comment_in_row'].blank? ||
					Setting.plugin_redmine_wktime['wktime_enter_comment_in_row'].to_i == 0 %>
					
					<% show_custfield_img = true %>
					<%=h hidden_field_tag('comments' + @row.to_s() +'[]', entry.nil? || @prev_template ? '' : entry.comments) %>
					<% comment = nil %>
					<% comment = entry.nil? || @prev_template ? '' : entry.comments %>
					<% cvs << comment unless comment.blank? %>
					
				<% end %>
				
				<% if !Setting.plugin_redmine_wktime['wktime_use_detail_popup'].blank? &&
					Setting.plugin_redmine_wktime['wktime_use_detail_popup'].to_i == 1 %>
					
					<% show_custfield_img = true %>
					<% if !@new_custom_field_values.blank? %>
						<% custom_field_values = entry.nil? || @prev_template ?  @new_custom_field_values : entry.custom_field_values %>
						<% custom_field_values.each do |custom_value| %>
							
							<%if !((!Setting.plugin_redmine_wktime['wktime_enter_cf_in_row1'].blank? &&
								Setting.plugin_redmine_wktime['wktime_enter_cf_in_row1'].to_i == custom_value.custom_field.id) ||
								(!Setting.plugin_redmine_wktime['wktime_enter_cf_in_row2'].blank? &&
								Setting.plugin_redmine_wktime['wktime_enter_cf_in_row2'].to_i == custom_value.custom_field.id))%>	
								
								<% cv = custom_value.custom_field.multiple? ?  custom_value.value.join(',') : custom_value.value %>
								<%=h hidden_field_tag('_custom_field_values_' + custom_value.custom_field.id.to_s + @row.to_s() +'[]', cv) %>
								<% cvs << cv unless cv.blank? %>
							
							<% end %>
						<% end %>
					<% end %>
				
				
					<% if show_custfield_img %>
					  	<% imgname ="" %>
						<% if !cvs.blank?  || !comment.blank? %>
							<% imgname = "withcommant.png" %>
						<% else %>
							<% imgname = "withoutcommant.png" %>
						<% end %>
						<% if !@new_custom_field_values.blank? || ( Setting.plugin_redmine_wktime['wktime_enter_comment_in_row'].blank? ||
									Setting.plugin_redmine_wktime['wktime_enter_comment_in_row'].to_i == 0)  %>
								<% image_tg = image_tag("#{imgname}", :id => 'custfield_img' + @row.to_s() +'_', :name => 'custfield_img' + @row.to_s() +'[]',
									:plugin => "redmine_wktime",:title => "#{entry.nil? || @prev_template || cvs.blank? ? '' : cvs.join(',')}") %>
							<% else %>
								<%= image_tg ="" %>
							<% end %>
						
						<% if disable %>
							<%= image_tg %>
						<% else %>
							<%= link_to image_tg, "javascript:showComment(#{@row.to_s}, #{@wday_index});"	%>
						<% end %>
					<% end %>
				
				<% end %>
			</td>
			<% @wday_index += 1 %>
		<% end %>
		<% if padAt == 'end' %>
			<td align="center">
			<% if @editable %>
				<%= link_to image_tag('delete.png'), "javascript:deleteRow(#{@row.to_s}, '#{l(:notice_unable_delete_time_entry)}');",
						:data => {:confirm => l(:text_are_you_sure)},	# :method => :delete,
						:title => l(:button_delete) %>
			<% end %>
			</td>
			</tr>
			<% @trOpen = false %>
		<% end %>
	<% end %>